{
  "name": "api",
  "version": "1.0.0",
  "description": "annotation api",
  "keywords": [
    "tsoa",
    "inversify",
    "nosql",
    "sql"
  ],
  "homepage": "https://github.com/jadogeri/express-crud-annotation-api#readme",
  "bugs": {
    "url": "https://github.com/jadogeri/express-crud-annotation-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jadogeri/express-crud-annotation-api.git"
  },
  "license": "MIT",
  "author": "Joseph Adogeri",
  "type": "commonjs",
  "main": "./src/server.ts",
  "scripts": {
    "prod": "concurrently \"npm run build -- --watch\" \"ts-node-dev --respawn --watch src,swagger.json src/server.ts\"",
    "clean": "rm -rf build/",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node ./build/src/server.js",
    "dev": "ts-node-dev ./src/server.ts",
    "test": "cross-env NODE_ENV=test DOTENV_CONFIG_PATH=.test.env jest --setupFiles dotenv/config && jest --config=jest.config.ts --coverage  --testPathPatterns=tests/ --runInBand --colors --verbose --detectOpenHandles"
  },
  "dependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@tsoa/runtime": "^6.6.0",
    "body-parser": "^2.2.0",
    "class-validator": "^0.14.3",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "express": "^5.1.0",
    "inversify": "^7.10.4",
    "inversify-binding-decorators": "^4.0.0",
    "mongodb": "^7.0.0",
    "mongoose": "^9.0.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "ts-node-dev": "^2.0.0",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@testcontainers/mongodb": "^11.9.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4",
    "testcontainers": "^11.9.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsoa": "^6.6.0",
    "typescript": "^5.9.3"
  }
}
